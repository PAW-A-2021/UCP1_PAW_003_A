@model IEnumerable<UCP1_PAW_003_A.Models.Konfirmasi>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama")
            </th>
            <th>
                @Html.DisplayName("Jumlah")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jumlah)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPesan"><i class="fa fa-marker fa-lg"> </i></a>
                <a asp-action="Details" asp-route-id="@item.IdPesan"><i class="fas fa-list"> </i></a>
                <a asp-action="Delete" asp-route-id="@item.IdPesan"><i class="fa fa-trash fa-lg"> </i></a>
            </td>
        </tr>
}
    </tbody>
</table>
